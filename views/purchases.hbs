{{!-- Built using the cs_340 nodejs starter guide: https://github.com/osu-cs340-ecampus/nodejs-starter-app --}}
{{!-- Create a table --}}
<table id = "purchases_table">

    {{!-- Header section --}}
    <thead>

        {{!-- For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders --}}
        <tr>
            {{#each data.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
            <th>delete</th>
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>

        {{!-- For each row, print the id, fname, lname, homeworld and age, in order --}}
        {{#each data}}
        <tr>
            <td>{{this.memberID}}</td>
            <td>{{this.gameID}}</td>
            <td>{{this.price}}</td>
            <td>{{this.purchaseDate}}</td>
            <td>{{this.warrantyEndDate}}</td>
            <td><button onclick="deletePurchase({{this.memberID}} , {{this.gameID}})">Delete</button></td>
        </tr>
        {{/each}}
    </tbody>
</table>
<script src="./js/delete_purchase.js"></script>

{{!-- Form to add a record to the table  --}}
<h2>Adding Data with AJAX</h2>
<p>To add a new purchase, please enter their information below and click 'Submit'!</p>
<form id="add-purchase-form-ajax">
    <label for="input-memberID">memberID: </label>
    {{!-- <input type="number" name="input-memberID" id="input-memberID">--}}
    <select name="input-memberID" id="input-memberID">
        <option value="">Select a Customer</option>
        {{#each customers_list}}
        <option value="{{this.memberID}}">{{this.firstName}} {{this.lastName}}, {{this.memberID}}</option>
        {{/each}}
    </select>

    <label for="input-gameID">gameID: </label>
    {{!--<input type="number" name="input-gameID" id="input-gameID">--}}
    <select name="input-gameID" id="input-gameID">
        <option value="">Select a Game</option>
        {{#each games_list}}
        <option value="{{this.gameID}}">{{this.item}}, {{this.gameID}}</option>
        {{/each}}
    </select>

    <label for="input-price">price: </label>
    <input type="number" step="0.01" name="input-price" id="input-price">

    <label for="input-purchaseDate">purchaseDate: </label>
    <input type="date" name="input-purchaseDate" id="input-purchaseDate">

    <label for="input-warrantyEndDate">warrantyEndDate: </label>
    <input type="date" name="input-warrantyEndDate" id="input-warrantyEndDate">

    <input type="submit">
</form>

{{!-- Embed our javascript to handle the DOM manipulation and AJAX request --}}
<script src="./js/add_purchase.js"></script>

